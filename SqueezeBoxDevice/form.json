{
    "elements":
            [
                {
                    "name": "MACAddress", "type": "ValidationTextBox", "caption": "MAC Adresse"
                },
                {
                    "name": "EmulateStatus",
                    "type": "CheckBox",
                    "caption": "Emulate Status"
                }
            ],
    "actions":
            [
                {
                    "type": "Button",
                    "label": "Request State",
                    "onClick": "LSQ_RequestState($id);"
                },
                {
                    "type": "Button",
                    "label": "Play",
                    "onClick": "LSQ_Play($id);"
                },
                {
                    "type": "Button",
                    "label": "Pause",
                    "onClick": "LSQ_Pause($id);"
                },
                {
                    "type": "Button",
                    "label": "Stop",
                    "onClick": "LSQ_Stop($id);"
                },
                { "name": "Slider", "type": "HorizontalSlider", "minimum": 0, "maximum": 100, "onChange": "LSQ_SetVolume($id, $Slider);" }

            ]
}