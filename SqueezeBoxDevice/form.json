{
    "elements":
            [
                {
                    "name": "MACAddress",
                    "type": "ValidationTextBox",
                    "caption": "MAC Adresse"
                },
                {
                    "name": "EmulateStatus",
                    "type": "CheckBox",
                    "caption": "Emulate Status"
                }
            ],
    "actions":
            [
                {
                    "type": "Button",
                    "label": "Request State",
                    "onClick": "LSQ_RequestState($id);"
                },
                {
                    "type": "Switch",
                    "label": "ON",
                    "onClick": "LSQ_Power($id,true);"
                },                
                {
                    "type": "Switch",
                    "label": "OFF",
                    "onClick": "LSQ_Power($id,false);"
                },                
                {
                    "type": "Button",
                    "label": "Play",
                    "onClick": "LSQ_Play($id);"
                },
                {
                    "type": "Button",
                    "label": "Pause",
                    "onClick": "LSQ_Pause($id);"
                },
                {
                    "type": "Button",
                    "label": "Stop",
                    "onClick": "LSQ_Stop($id);"
                },
                {
                    "type": "Button",
                    "label": "Prev",
                    "onClick": "LSQ_Prev($id);"
                },
                {
                    "type": "Button",
                    "label": "Next",
                    "onClick": "LSQ_Next($id);"
                },
                {
                    "type": "Label",
                    "label": "Volume:"
                },
                {
                    "name": "Slider",
                    "type": "HorizontalSlider",
                    "minimum": 0,
                    "maximum": 100,
                    "onChange": "LSQ_SetVolume($id, $Slider);"
                }

            ]
}